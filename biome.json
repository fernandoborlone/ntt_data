{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"javascript": {
	  "formatter": {
		"arrowParentheses": "always",
		"bracketSameLine": true,
		"bracketSpacing": true,
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"quoteStyle": "single",
		"semicolons": "asNeeded"
	  }
	},
	"linter": {
	  "enabled": true,
	  "rules": { "recommended": true }
	},
	"organizeImports": { "enabled": true },
	"files": {
	  "ignore": ["node_modules"]
	}
  }